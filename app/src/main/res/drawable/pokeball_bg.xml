<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Top Half (Red Semicircle) -->
    <item android:top="0dp" android:bottom="100dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" />
            <corners android:topLeftRadius="100dp" android:topRightRadius="100dp" />
        </shape>
    </item>

    <!-- Bottom Half (White with curved bottom only) -->
    <item android:top="100dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:bottomLeftRadius="100dp" android:bottomRightRadius="100dp" />
        </shape>
    </item>

    <!-- Center Divider -->
    <item android:top="98dp" android:height="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
        </shape>
    </item>
</layer-list>
